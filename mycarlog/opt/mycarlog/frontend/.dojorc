{
    "build-app": {
        "externals": {
            "dependencies": [
                { "from": "./src/sw/service-worker-app.js" }
            ]
        },
        "pwa": {
            "manifest": {
                "name": "Car Log",
                "description": "Take your vehicle's log everywhere.",
                "display": "standalone",
                "orientation":  "any",
                "mobile-web-app-capable": "yes",
                "apple-mobile-web-app-capable": "yes",
                "apple-mobile-web-app-status-bar-style": "default",
                "icons": [
                    {"src": "./src/favicon/android-icon-36x36.png", "sizes": "36x36", "type": "image/png"},
                    {"src": "./src/favicon/android-icon-48x48.png",     "sizes": "48x48",       "type": "image/png"},
                    {"src": "./src/favicon/android-icon-72x72.png",     "sizes": "72x72",       "type": "image/png"},
                    {"src": "./src/favicon/android-icon-96x96.png",     "sizes": "96x96",       "type": "image/png"},
                    {"src": "./src/favicon/android-icon-144x144.png",       "sizes": "144x144",     "type": "image/png"},
                    {"src": "./src/favicon/android-icon-192x192.png",       "sizes": "192x192",     "type": "image/png" }
                ]
            },
            "serviceWorker": {
                "cachePrefix": "mycarlog-app",
                "excludeBundles": ["admin"],
                "routes": [
                    {
                        "urlPattern": ".*\\.(png|jpg|gif|svg)",
                        "strategy": "cacheFirst",
                        "cacheName": "mcl-images",
                        "expiration": { "maxEntries": 10, "maxAgeSeconds": 604800 }
                    }
                ], 
                "importScripts": [
                    "./externals/src/sw/service-worker-app.js"
                ] 
            }
        }
    }
}